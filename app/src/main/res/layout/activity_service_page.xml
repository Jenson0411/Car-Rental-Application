<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ServicePage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="Manage Services"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />


        <Button
            android:id="@+id/sebutton1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add service"
            android:onClick= "onClickAddService"/>

        <Button
            android:id="@+id/sebutton3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete service"
            android:onClick="onClickDeleteService"/>

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickDisplayService"
            android:text="Edit Services" />

        <Button
            android:id="@+id/button20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Home"
            android:onClick="SPbackBnt"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>